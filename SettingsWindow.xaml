<Window x:Class="DevelopmentEnvironmentQuicklaunch.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings"
        Height="507"
        Width="624"
        MinWidth="580"
        MinHeight="500">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Label Content="Visual Studio:" Width="188"/>
            <TextBox Name="VisualStudioPathBox" Width="320" Margin="0,0,10,0"/>
            <Button Content="Browse..." Width="80" Click="BrowseVS_Click"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,10">
            <Label Content="SQL Server Management Studio:" Width="188"/>
            <TextBox Name="SSMSPathBox" Width="320" Margin="0,0,10,0"/>
            <Button Content="Browse..." Width="80" Click="BrowseSSMS_Click"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,0,0,10">
            <Label Content="Text Editor:" Width="188"/>
            <TextBox Name="TextEditorPathBox" Width="320" Margin="0,0,10,0"/>
            <Button Content="Browse..." Width="80" Click="BrowseTextEditor_Click"/>
        </StackPanel>
        <WrapPanel Grid.Row="3" Margin="0,0,0,10">
            <CheckBox Name="DisableSSMSIfOpenCheckBox" Content="Disable SSMS launch if already open" Margin="0,0,20,0"/>
            <CheckBox Name="LaunchTextEditorCheckBox" Content="Launch Text Editor"/>
            <CheckBox Name="LaunchOnStartupCheckBox" Content="Launch on Startup" Margin="20,0,0,0"/>
            <CheckBox Name="LaunchAsAdminCheckBox" Content="Launch applications as Administrator" Margin="0,0,0,0"/>
        </WrapPanel>
        <GroupBox Header="Additional Applications" Grid.Row="5" Margin="0,0,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <ListBox Name="AdditionalAppsListBox" Grid.Row="0"/>
                <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Right" Margin="0,5,0,0">
                    <Button Content="Add..." Width="80" Margin="0,0,10,0" Click="AddApp_Click"/>
                    <Button Content="Remove" Width="80" Click="RemoveApp_Click"/>
                </StackPanel>
            </Grid>
        </GroupBox>
        <StackPanel Orientation="Horizontal" Grid.Row="6" HorizontalAlignment="Right">
            <Button Content="OK" Width="80" Margin="0,0,10,0" Click="OK_Click"/>
            <Button Content="Cancel" Width="80" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>